<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Status Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:41"
            android:textSize="14sp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="end">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/circle_black" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/circle_black" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_black" />
        </LinearLayout>
    </LinearLayout>

    <!-- Image -->
    <ImageView
        android:id="@+id/garlic_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/status_bar"
        android:layout_marginBottom="16dp"
        android:src="@drawable/bawang_putih"
        android:scaleType="centerCrop" />

    <!-- Text Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/garlic_image">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bawang putih memiliki banyak manfaat untuk kesehatan, di antaranya:"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Menurunkan kolesterolBawang putih mengandung zat ajoene yang dapat membantu mencegah penggumpalan darah dan menurunkan kadar kolesterol."
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Menurunkan tekanan darah Bawang putih dapat membantu mengendalikan tekanan darah tinggi, yang merupakan salah satu faktor risiko penyakit kardiovaskular."
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Mencegah penyakit jantung Bawang putih dapat membantu mencegah penyakit jantung karena dapat mengendalikan kadar kolesterol dan tekanan darah."
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#AFD887"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bawang putih dapat diolah untuk menurunkan kolesterol dengan cara direbus atau dimakan mentah:"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Geprek bawang putih."
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Rebus bersama air hingga mendidih."
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Setelah mendidih, rebus selama 30 detik, lalu matikan api."
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Biarkan bawang putih terendam dalam air panas hingga aromanya keluar."
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Saring air rebusan bawang putih ke dalam gelas dan minum selagi hangat."
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Back Button -->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:contentDescription="Back" />

</RelativeLayout>
