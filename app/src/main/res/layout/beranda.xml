<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Top Image -->
    <ImageView
        android:id="@+id/topImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ramuan" />

    <!-- Herbs Grid -->
    <GridLayout
        android:id="@+id/herbsGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topImage"
        android:columnCount="2"
        android:padding="16dp"
        android:rowCount="3">

        <!-- Herb Item 1 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/herbImage1"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/lidah_buaya"
                android:scaleType="centerCrop"
                android:src="@drawable/lidah_buaya" />

            <TextView
                android:id="@+id/herbName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/herbImage1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Lidah buaya"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/heartIcon2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/favorite" />

        </RelativeLayout>

        <!-- Herb Item 2 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/herbImage2"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/jahe"
                android:scaleType="centerCrop"
                android:src="@drawable/jahe" />

            <ImageView
                android:id="@+id/heartIcon2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:src="@drawable/favorite"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/herbName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/herbImage2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Jahe"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Herb Item 3 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/herbImage3"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/buah_bit"
                android:scaleType="centerCrop"
                android:src="@drawable/buah_bit" />

            <ImageView
                android:id="@+id/heartIcon3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:src="@drawable/favorite" />

            <TextView
                android:id="@+id/herbName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/herbImage3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Buah bit"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Herb Item 4 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/herbImage4"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bawang_putih"
                android:scaleType="centerCrop"
                android:src="@drawable/bawang_putih" />

            <ImageView
                android:id="@+id/heartIcon4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:src="@drawable/favorite" />

            <TextView
                android:id="@+id/herbName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/herbImage4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Bawang putih"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Herb Item 5 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/herbImage5"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/daun_sirih"
                android:scaleType="centerCrop"
                android:src="@drawable/daun_sirih" />

            <ImageView
                android:id="@+id/heartIcon5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:src="@drawable/favorite" />

            <TextView
                android:id="@+id/herbName5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/herbImage5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Daun sirih"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Herb Item 6 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/herbImage6"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/kumis_kucing"
                android:scaleType="centerCrop"
                android:src="@drawable/kumis_kucing" />

            <ImageView
                android:id="@+id/heartIcon6"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:src="@drawable/favorite" />

            <TextView
                android:id="@+id/herbName6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/herbImage6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Kumis kucing"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </GridLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:background="#AFD887"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@android:color/black"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/myfav" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Recipes"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
