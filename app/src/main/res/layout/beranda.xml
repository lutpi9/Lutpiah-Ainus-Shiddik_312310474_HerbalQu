Berikut adalah kode XML untuk membuat tampilan yang persis seperti gambar yang Anda berikan menggunakan Android XML layout:

    ```xml
    <?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Top Image -->
    <ImageView
        android:id="@+id/topImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ramuan" />

    <!-- Herbs Grid -->
    <GridLayout
        android:id="@+id/herbsGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topImage"
        android:columnCount="2"
        android:padding="16dp"
        android:rowCount="3">

        <!-- Herb Item 1 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/herbImage1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/lidah_buaya"
                android:scaleType="centerCrop"
                android:src="@drawable/aloe_vera" />

            <TextView
                android:id="@+id/herbName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/herbImage1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Lidah buaya"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Herb Item 2 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/herbImage2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/jahe"
                android:scaleType="centerCrop"
                android:src="@drawable/ginger" />

            <ImageView
                android:id="@+id/heartIcon2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:src="@drawable/ic_heart" />

            <TextView
                android:id="@+id/herbName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/herbImage2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Jahe"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Herb Item 3 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/herbImage3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/buah_bit"
                android:scaleType="centerCrop"
                android:src="@drawable/beetroot" />

            <ImageView
                android:id="@+id/heartIcon3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:src="@drawable/ic_heart" />

            <TextView
                android:id="@+id/herbName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/herbImage3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Buah bit"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Herb Item 4 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/herbImage4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bawang_putih"
                android:scaleType="centerCrop"
                android:src="@drawable/garlic" />

            <ImageView
                android:id="@+id/heartIcon4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:src="@drawable/ic_heart" />

            <TextView
                android:id="@+id/herbName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/herbImage4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Bawang putih"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Herb Item 5 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/herbImage5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_corners"
                android:scaleType="centerCrop"
                android:src="@drawable/betel_leaves" />

            <ImageView
                android:id="@+id/heartIcon5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:src="@drawable/ic_heart" />

            <TextView
                android:id="@+id/herbName5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/herbImage5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Daun sirih"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Herb Item 6 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/herbImage6"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_corners"
                android:scaleType="centerCrop"
                android:src="@drawable/cats_whiskers" />

            <ImageView
                android:id="@+id/heartIcon6"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:src="@drawable/ic_heart" />

            <TextView
                android:id="@+id/herbName6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/herbImage6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Kumis kucing"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </GridLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_green"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_heart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Recipes"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

<shape xmlns:android="http://schemas.android.com/apk/res/android">
<corners android:radius="8dp" />
<solid android:color="@android:color/white" />
</shape>

<color name="light_green">#DFF0D8</color>
